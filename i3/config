include $HOME/.config/i3/workspaces.conf
include $HOME/.config/i3/rules.conf

set $mod Mod4

# CORRIGIDO: tamanho da fonte v√°lido
font pango:monospace 8

# exec --no-startup-id picom --config ~/.config/i3/picom/picom.conf --experimental-backends -b
exec --no-startup-id picom --config ~/.config/i3/picom/picom.conf --backend glx -b
exec_always --no-startup-id ~/.config/i3/scripts/autostart.sh

bindsym $mod+Shift+Escape exec --no-startup-id ~/.config/i3/scripts/power

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

bar {
    status_command i3status -c ~/.config/i3/i3status.conf
    position top
    tray_output primary
    # tray_output HDMI-1
    separator_symbol "."

    colors {
        statusline        #ffffff
        separator         #ffffff

        focused_workspace #00808080 #ffffff
        active_workspace  #285577   #ffffff
        urgent_workspace  #2F343A   #ffffff
    }
}
